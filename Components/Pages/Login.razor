@page "/login"
@rendermode InteractiveServer
@using WebKitchen.Components.SharedComponents
@inject User CurrentUser

<div class="card border-layout">
    <div class="card-body">
        <LoginModal/>

        @if (CurrentUser.Username != null)
        {
            <p>@CurrentUser.Username</p>
            @*<div class="navbar navbar-expand-lg"
                 style="border: 1px solid #111111; border-radius: 5px; margin-top: 10px;">
                <img src="pics/PlaceHolderPic.jpg" class="card-img-top" alt="..." style="width: 100px;"/>
                <p>@CurrentUser.Username</p>
                <p>@CurrentUser.GetEmail()</p>
            </div>*@
        }
        else
        {
            // Example
            @*<div class="navbar navbar-expand-lg"
                 style="border: 1px solid #111111; border-radius: 5px; margin-top: 10px;">
                <p>__Username__</p>
                <p>__Email__</p>
            </div>*@
        }

        @if (CurrentUser.Recipes.Count > 0)
        {
            @foreach (var recipe in CurrentUser.Recipes)
            {
                <div class="navbar navbar-expand-lg"
                     style="border: 1px solid #111111; border-radius: 5px; margin-top: 10px;">
                    <div class="container-fluid">
                        <img src="data:image/png;base64,@recipe.Base64Image" class="card-img-top" alt="..."
                             style="width: 100px;">
                        <p>@recipe.Name</p>
                        <p>Calories - @recipe.TotalMacros.Calories.ToString(".00")</p>
                        <p>Fat - @recipe.TotalMacros.Fat.ToString(".00")</p>
                        <p>Carbs - @recipe.TotalMacros.Carbs.ToString(".00")</p>
                        <p>Protein - @recipe.TotalMacros.Protein.ToString(".00")</p>
                    </div>
                </div>
            }
        }
        else
        {
            // Example
            <div class="navbar navbar-expand-lg"
                 style="border: 1px solid #111111; border-radius: 5px; margin-top: 10px;">
                <div class="container-fluid">
                    <img src="pics/PlaceHolderPic.jpg" class="card-img-top" alt="..." style="width: 100px;">
                    <p>Amatriciana</p>
                    <p>Calories - 781.83</p>
                    <p>Fat - 22.2</p>
                    <p>Carbs - 110.21</p>
                    <p>Protein - 32.9</p>
                    <a href="/edit">
                        <img
                            src="data:image/png;base64,"
                            class="card-img-top" alt="..." style="width: 20px;"/>
                    </a>
                </div>
            </div>
        }
    </div>

</div>

