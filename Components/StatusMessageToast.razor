@inject IJSRuntime JsRuntime

@* toaster *@
<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="@_toastId" class="toast p-2 generel__border-layout" role="alert" aria-live="assertive" aria-atomic="true"
         data-bs-delay="5000">
        <div class="toast-body">
            @_toastStatusMessage
        </div>
    </div>
</div>

@code{

    private string _toastStatusMessage = "";
    private string _toastId = $"toast-{Guid.NewGuid():N}";

    public async Task ShowToastAsync(string message)
    {
        try
        {
            _toastStatusMessage = message;
            await JsRuntime.InvokeVoidAsync("showStatusToast", _toastId);
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine("Error showing toast: " + ex.Message);
            Console.WriteLine("StackTrace: " + ex.StackTrace);
        }
    }

}